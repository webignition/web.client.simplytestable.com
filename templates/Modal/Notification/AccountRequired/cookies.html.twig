{% extends 'Abstract/Modal/Notification/account-required.html.twig' %}

{% set id = 'cookies-account-required-modal' %}
{% set additional_classes = 'account-required-modal' %}

{% block modal_header %}
    <h3>Unlock Custom Cookies</h3>
{% endblock %}

{% block modal_body %}
    <div class="cta row">
        <div class="col-lg-12">
            <p class="lead">
                For sites that use cookies for authentication or for user-specific content.
                Available to all account holders.
            </p>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <a class="btn btn-primary btn-lg" href="{{ path('sign_in_render') }}">
                <span class="primary">Sign in</span>
                <span class="byline">&nbsp;<br>To unlock custom cookies.</span>
                <i class="fa fa-sign-in"></i>
            </a>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <a href="{{ path('view_user_sign_up_request') }}" class="btn btn-lg btn-cta btn-success">
                <span class="primary">Create an account</span>
                <span class="byline">30-day trial, no credit card required. Get started in seconds.</span>
                <i class="fa fa-user"></i>
            </a>
        </div>
    </div>
{% endblock %}
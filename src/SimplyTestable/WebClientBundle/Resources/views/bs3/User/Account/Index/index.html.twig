{% extends 'SimplyTestableWebClientBundle::bs3/User/Account/base.html.twig' %}

{% block title %}Your account ({{ user.username }}) - {{ parent() }}{% endblock %}

{% set label_col_class = 'col-lg-3 col-md-3 col-sm-4' %}
{% set field_col_class = 'col-lg-9 col-md-6 col-sm-8' %}
{% set submit_col_class = 'col-lg-offset-3 col-lg-9 col-md-offset-3 col-md-6 col-sm-offset-4 col-sm-8' %}

{% block body_class %} {{ parent() }} user-account-index {% endblock %}

{% block account_content %}
    <div class="plan-section" id="email-address-and-password-section">
        <h2 id="email-address-and-password">Email address and password</h2>

        <div class="plan-section">
            {% include 'Partials/User/Account/email.html.twig' %}
        </div>

        <div class="plan-section">
            {% include 'Partials/User/Account/password.html.twig' %}
        </div>

    </div>

    <div class="plan-section">
        <h2 id="plan">Plan: {{ plan_presentation_name }}</h2>
        {% include 'Partials/User/Account/plan-details.html.twig' %}
    </div>

    <div class="plan-section">
        <h2 id="team">Team{% if user_summary.getTeamSummary.isInTeam %}: {{ team.name }}{% endif %}</h2>
        {% include 'Partials/User/Account/Team/team-details.html.twig' %}
    </div>

    <div class="plan-section">
        <h2 id="payment-details">Payment details</h2>
        {% include 'Partials/User/Account/payment-details.html.twig' %}

        {% if stripe_event_data['invoice'] is defined %}
            <div class="latest-invoice">
                <h3 id="payment-latest-invoice">Latest invoice</h3>
                {% include 'Partials/User/Account/latest-invoice.html.twig' %}
            </div>
        {% endif %}
    </div>

    <div class="plan-section" id="news-subscriptions">
        <h2>News subscriptions</h2>
        {% include 'Partials/User/Account/news-subscriptions.html.twig' %}
    </div>
{% endblock %}
{% set heading = heading is defined ? heading : 'Heading' %}
{% set id = id is defined ? id : 'account-required-modal' %}
{% set additional_classes = additional_classes is defined ? additional_classes : '' %}

<div class="modal {{ additional_classes }}" id="{{ id }}">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" data-name="close" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                {% block modal_header %}
                {% endblock %}
            </div>
            <div class="modal-body gridded">
                {% block modal_body %}
                {% endblock %}
            </div>
            <div class="modal-footer">
                <button class="btn btn-default" data-dismiss="modal" data-name="close" aria-hidden="true">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>

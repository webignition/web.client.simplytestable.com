{% extends 'SimplyTestableWebClientBundle::bs3/base.html.twig' %}

{% block title %}Testing {% include 'SimplyTestableWebClientBundle:Partials:/url/utf8-schemeless-possibly-truncated-64.html.twig' with {'url': website} %} (#{{test.testId}}) - {{ parent() }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/css/summary-stats.css'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/css/test-options.css'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/css/task-list.css'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/css/test-progress.css'
    filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/js/jQuery/stModal.js'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/js/modal.js'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/js/http-authentication-options-modal.js'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/js/cookie-options-modal.js'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/js/test-progress-tasks.js'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/js/test-progress-summary.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body_class %} {{ parent() }} full-width job-{{ remote_test.state }} {% endblock %}

{% block body %}
    {{ parent() }}

    <div class="alert-container">
        {% include 'SimplyTestableWebClientBundle:bs3/Partials/Generic/Notification/Conditional:url-limit.html.twig' with {'add_class':'alert-ammendment'} %}
    </div>

    <div class="header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1>
                        Testing
                        <span id="test-url" title="{{website.raw}}">
                            {{ website.utf8.schemeless.raw }}
                        </span>
                        <span id="test-id">(#{{ test.testId }})</span>
                    </h1>

                    <div class="row details">
                        <div class="col-lg-12 progress-summary">
                            <div class="progress">
                                <div id="completion-percent-bar"
                                     class="progress-bar {% if remote_test.state == 'crawling' %}progress-bar-warning{% endif %}"
                                     role="progressbar"
                                     aria-valuenow="{{ remote_test.completionpercent }}"
                                     aria-valuemin="0"
                                     aria-valuemax="100"
                                     style="width: {{ remote_test.completionpercent }}%;"></div>
                            </div>
                            <p class="subtle" id="completion-percent-state-label">
                                <i class="fa fa-spin fa-spinner"></i>
                            </p>
                        </div>

                        <div class="col-lg-9 col-md-9 col-sm-7 col-xs-12 test-summary">
                            <div class="row">
                                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12 task-queues">
                                    <p>Test Summary:</p>
                                    {% include 'SimplyTestableWebClientBundle:bs3/Partials/Test/Progress/Index:task-queues.html.twig' %}
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 task-types">
                                    <p class="">Testing:</p>
                                    {% include 'SimplyTestableWebClientBundle:bs3/Partials/Test/Progress/Index:task-type-summary.html.twig' %}
                                </div>
                            </div>
                        </div>
                        <div class="clearfix visible-xs"></div>
                        <div class="col-lg-3 col-md-3 col-sm-5 side-actions">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 buttons">
                                    <form id="cancel-form" role="form" method="post" action="{{ path('test_cancel', {website: website.raw, test_id: test.testId}) }}">
                                        <button id="cancel-button" type="submit" class="btn btn-danger btn-significant side-action">
                                            <i class="fa fa-fw fa-power-off"></i>
                                            Stop test
                                            <span>and go to the results</span>
                                        </button>
                                    </form>

                                    <form id="cancel-crawl-form" role="form" method="post" action="{{ path('test_cancel_crawl', {'test_id':test.testId, 'website':test.website}) }}">
                                        <button id="cancel-crawl-button" type="submit" class="btn btn-warning btn-significant side-action">
                                            <i class="fa fa-fw fa-power-off"></i>
                                            Stop finding pages, start testing
                                        </button>
                                    </form>
                                </div>

                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 test-options">
                                    {% if test_options['http-authentication'] is defined %}
                                        <div class="test-option">
                                            {% include 'SimplyTestableWebClientBundle:bs3/Partials/Test/Options/HttpAuthentication:http-authentication.html.twig' with {'read_only': true} %}
                                        </div>
                                    {% endif %}

                                    {% if test_options['cookies'] is defined %}
                                        <div class="test-option">
                                            {% include 'SimplyTestableWebClientBundle:bs3/Partials/Test/Options/Cookies:cookies.html.twig' with {'read_only': true} %}
                                        </div>
                                    {% endif %}

                                    <span class="collapse-control collapsed link" data-toggle="collapse" data-target="#test-options">
                                        Show selected test options
                                        <i class="fa fa-caret-down"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="test-options" class="collapse">
                        {% include 'SimplyTestableWebClientBundle:bs3/Partials/Test/Options:results-test-options.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-12" id="tasks">
                    <h2>Live results</h2>
            </div>
        </div>
    </div>

{% endblock %}
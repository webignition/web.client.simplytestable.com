{% extends 'SimplyTestableWebClientBundle::bs3/base.html.twig' %}

{% set is_readonly = (is_owner == false) %}

{% block title %}{{ task_type }} report for {% include 'SimplyTestableWebClientBundle:Partials:/url/utf8-schemeless-possibly-truncated-64.html.twig' with {'url': website} %} (#{{test.testId}}) - {{ parent() }}{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts
    '@SimplyTestableWebClientBundle/Resources/assets/vendor/jquery-scrollto/jquery.scrollTo-1.4.12/jquery.scrollTo.js'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/js/jQuery/stFormHelper.js'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/js/test-results.js'
    '@SimplyTestableWebClientBundle/Resources/assets/bs3/js/test-results-by-task-type.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body_class %} {{ parent() }} full-width test-results-by-task-type task-type-{{ task_type|lower|replace({' ': '-'}) }} {{ filter }} {% endblock %}

{% block body %}
    {{ parent() }}

    <div class="alert-container">
        {% include 'SimplyTestableWebClientBundle:bs3/Partials/Generic/Notification/Conditional:url-limit.html.twig' %}
        {% include 'SimplyTestableWebClientBundle:bs3/Partials/Generic/Notification/Conditional:read-only-test.html.twig' %}
    </div>

    <div class="header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <span id="device-size-lg"></span>
                    <span id="device-size-md"></span>
                    <span id="device-size-sm"></span>
                    <span id="device-size-xs"></span>

                    <h1>
                        {{ task_type }} report for
                        <a href="{{ path('view_test_results_index_index', {'website': website.raw, 'test_id': test.testId}) }}">
                            <span id="test-url" title="{{website.raw}}">{{ website.utf8.schemeless.raw }}</span>
                            <span id="test-id">(#{{ test.testId }})</span>
                        </a>
                    </h1>

                    <p class="lead">
                        {% include 'SimplyTestableWebClientBundle:bs3/Partials/Generic:single-plural-item.html.twig' with {'value': error_task_maps.uniqueErrorCount, 'singular': 'unique error'} %} found in {% include 'SimplyTestableWebClientBundle:bs3/Partials/Generic:single-plural-item.html.twig' with {'value': tasks|length, 'singular': 'page'} %}.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="nav nav-tabs" role="tablist">
                    <li class="{{ filter == 'by-error' ? 'active' : '' }}">
                        <a href="{{ path('view_test_results_bytasktype_index', {'website': website.raw, 'test_id': test.testId, 'task_type': task_type|lower|replace({' ':'+'}), 'filter': 'by-error'}) }}">
                            By error ({% include 'SimplyTestableWebClientBundle:bs3/Partials/Generic:single-plural-item.html.twig' with {'value': error_task_maps.uniqueErrorCount, 'singular': 'unique error'} %})
                        </a>
                    </li>
                    <li class="{{ filter == 'by-page' ? 'active' : '' }}">
                        <a href="{{ path('view_test_results_bytasktype_index', {'website': website.raw, 'test_id': test.testId, 'task_type': task_type|lower|replace({' ':'+'}), 'filter': 'by-page'}) }}">
                            By page ({% include 'SimplyTestableWebClientBundle:bs3/Partials/Generic:single-plural-item.html.twig' with {'value': tasks|length, 'singular': 'page'} %})
                        </a>
                    </li>
                </ul>

                {% if filter == 'by-page' %}
                    <ul class="task-list list-unstyled by-page-list">
                        {% for task in tasks %}
                            <li>
                                <a class="page" href="{{ path('view_test_task_results_index_index', {'website': website.raw, 'test_id': test.testId, 'task_id': task.taskId, 'trailingSlash':''}) }}">
                                    <div class="row task">
                                        <div class="meta">
                                            <div class="col-lg-10 url-container">
                                                <span class="url">
                                                    {{ task.url|replace({'http://': '', 'https://': ''}) }}
                                                </span>
                                            </div>
                                            <div class="col-lg-2 occurrences-container">
                                                {% include 'SimplyTestableWebClientBundle:bs3/Partials/Test/TaskList/Task/SummaryLabels:completed.html.twig' %}
                                            </div>
                                        </div>

                                    </div>
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <ul class="task-list list-unstyled by-error-list">
                        {% for error_task_map in error_task_maps.errorTaskMaps %}
                            <li class="error">
                                <h3>{{ error_task_map.message }}</h3>

                                <p class="lead">
                                    Found
                                    <span class="error-count" data-count="{{ error_task_map.cumulativeOccurrenceCount }}">
                                        {% include 'SimplyTestableWebClientBundle:bs3/Partials/Generic:once-twice-x-times.html.twig' with {'value': error_task_map.cumulativeOccurrenceCount} %}
                                    </span>
                                    in
                                    {% include 'SimplyTestableWebClientBundle:bs3/Partials/Generic:single-plural-item.html.twig' with {'value': error_task_map.tasks.count, 'singular': 'page'} %}<span class="colon">:</span>
                                </p>

                                <div class="pages">
                                    {% for task in error_task_map.tasks %}
                                        <a class="page" href="{{ path('action_test_task_results_byurl_index', {'website': website.raw, 'test_id': test.testId, 'task_url': task.url, 'task_type': task_type|lower}) }}#{{ error_task_map.messageHash }}">
                                            <div class="row task">
                                                <div class="meta">
                                                    <div class="col-lg-9 url-container">
                                                        <span class="url">
                                                            {{ task.url|replace({'http://': '', 'https://': ''}) }}
                                                        </span>
                                                    </div>
                                                    <div class="col-lg-3 occurrences-container">
                                                    <span class="label label-danger">
                                                        {% include 'SimplyTestableWebClientBundle:bs3/Partials/Generic:single-plural-item.html.twig' with {'value': task.output.result.countByMessage(error_task_map.message), 'singular': 'occurrence'} %} <i class="fa fa-caret-right"></i>
                                                    </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                    {% endfor %}
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
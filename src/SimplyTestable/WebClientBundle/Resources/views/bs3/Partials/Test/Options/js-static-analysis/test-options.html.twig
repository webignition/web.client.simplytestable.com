{% set disable = is_disabled and (test_options['js-static-analysis'] is not defined or not test_options['js-static-analysis']) %}

<div class="test-options-set task-type-option {% if disable %}test-options-set-disabled{% endif %} {% if not is_available %}not-available modal-button{% endif %}"
     id="js-static-analysis-validation-options"
     data-task-type="js-static-analysis"
>
    <label class="checkbox {% if disable %}disabled{% endif %}">
        <input {% if (is_disabled) %}disabled{% endif %} class="task-type" type="checkbox" value="1" name="js-static-analysis" {% if (test_options['js-static-analysis'] is defined and test_options['js-static-analysis'] == 1) %} checked {% endif %} />

        <span class="task-type-name">
            JavaScript static analysis

            {% if not is_available %}
                (account required)
            {% endif %}
        </span>
        <span class="help-block">Analyse the quality of your JavaScript with <a href="http://www.jslint.com/lint.html">JSLint</a></span>
    </label>

    {% if is_available and (is_enabled or (is_disabled and test_options['js-static-analysis'] is defined and test_options['js-static-analysis'] == 1)) %}

        <div class="test-options-advanced">
            <span class="collapse-control collapsed link" data-toggle="collapse" data-target="#js-static-analysis-options-advanced">
                Advanced JS static analysis and JSLint options
            </span>

            {% include 'SimplyTestableWebClientBundle:bs3/Partials/Test/Options/js-static-analysis:advanced-options.html.twig' %}

        </div>

    {% endif %}
</div>
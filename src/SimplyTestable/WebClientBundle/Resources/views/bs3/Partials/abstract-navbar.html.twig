{% if navbar_additional_classes is not defined %}
    {% set navbar_additional_classes = '' %}
{% endif %}

<div class="navbar navbar-inverse {{ navbar_additional_classes }}" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>

            <a class="navbar-brand" href="{{ public_site.urls.home }}">
                SimplyTestable
            </a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                {% block items %}
                    <li class="text {% if app.request.get('_route') == 'view_dashboard_index_index' %}active{% endif %}">
                        <a href="{{ path('view_dashboard_index_index') }}">
                            <i class="fa fa-tachometer"></i>
                            {% if is_logged_in %}
                                Dashboard
                            {% else %}
                                Demo <span class="hidden-sm hidden-md">dashboard</span> (try me)
                            {% endif %}
                        </a>
                    </li>

                    {% if is_logged_in == false %}
                        <li class="text">
                            <a href="{{ public_site['urls']['home'] }}{{ public_site['urls']['features'] }}">
                                <i class="fa fa-signal"></i> Features
                            </a>
                        </li>
                        <li class="text">
                            <a href="{{ public_site['urls']['home'] }}{{ public_site['urls']['plans_and_pricing'] }}">
                                <i class="fa fa-calendar"></i> Pricing <span class="hidden-sm">and plans</span>
                            </a>
                        </li>
                    {% endif %}

                    {% if is_logged_in %}
                        <li class="user-actions text {% if app.request.get('_route') == 'view_user_account_index_index' %}active{% endif %}">
                            <p class="navbar-text spacer highlighted-spacer hidden-xs">&nbsp;</p>
                            <a class="username" href="{{ path('view_user_account_index_index') }}">
                                <i class="fa fa-user"></i> {{ user.username }}
                            </a>
                        </li>
                        <li>
                            <form class="navbar-form signout-form" method="post" action="{{ path('sign_out_submit') }}">
                                <button type="submit" class="btn btn-primary btn-sm">
                                    Sign out
                                    <i class="fa fa-caret-right"></i>
                                </button>
                            </form>
                        </li>
                    {% else %}
                        <li class="user-actions">
                            <div>
                                <p class="navbar-text spacer highlighted-spacer">&nbsp;</p>
                                <a href="{{ path('view_user_signin_index') }}" class="btn btn-default btn-sm navbar-btn">
                                    <i class="fa fa-caret-right"></i> Sign in
                                </a>
                            </div>
                        </li>
                        <li>
                            <div>
                                <p class="navbar-text spacer hidden-xs">&nbsp;</p>
                                <a href="{{ path('view_user_signup_index_index') }}" class="btn btn-default btn-sm navbar-btn">
                                    <i class="fa fa-user"></i> Create an account
                                </a>
                            </div>
                        </li>
                    {% endif %}
                {% endblock %}
            </ul>
        </div>
    </div>
</div>
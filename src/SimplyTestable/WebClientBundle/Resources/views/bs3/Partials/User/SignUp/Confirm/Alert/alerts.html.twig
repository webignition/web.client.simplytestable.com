{% set alert_type = 'error' %}
{% set alert_field_selector = 'token' %}
{% set alert_view = null %}
{% set alert_view_parameters = {} %}
{% set alert_dismissable = true %}

{% if user_error is defined and user_error == 'invalid-user' %}
    {% set alert_type  = 'info' %}
    {% set alert_view = '@SimplyTestableWebClient/bs3/Partials/User/SignUp/Confirm/Alert/Content/user-invalid.html.twig' %}
    {% set alert_view_parameters = {email: email} %}
    {% set alert_dismissable = false %}
{% endif %}

{% if token_resend_error is defined and token_resend_error == 'postmark-failure' %}
    {% set alert_type  = 'info' %}
    {% set alert_view = '@SimplyTestableWebClient/bs3/Partials/User/SignUp/Confirm/Alert/Content/postmark-failure.html.twig' %}
    {% set alert_view_parameters = {email: email} %}
    {% set alert_dismissable = false %}
{% endif %}

{% if token_resend_error is defined and token_resend_error == 'postmark-not-allowed-to-send' %}
    {% set alert_type  = 'info' %}
    {% set alert_view = '@SimplyTestableWebClient/bs3/Partials/Alert/Content/postmark-not-allowed-to-send.html.twig' %}
    {% set alert_view_parameters = {contact_email: external_links.contact_email} %}
{% endif %}

{% if token_resend_error is defined and token_resend_error == 'postmark-inactive-recipient' %}
    {% set alert_type  = 'info' %}
    {% set alert_view = '@SimplyTestableWebClient/bs3/Partials/Alert/Content/postmark-inactive-recipient.html.twig' %}
    {% set alert_view_parameters = {email: email} %}
{% endif %}

{% if token_resend_error is defined and token_resend_error == 'core-app-invalid-credentials' %}
    {% set alert_type  = 'info' %}
    {% set alert_view = '@SimplyTestableWebClient/bs3/Partials/Alert/Content/core-app-invalid-credentials.html.twig' %}
{% endif %}

{% if token_resend_confirmation is defined and token_resend_confirmation is not empty %}
    {% set alert_type  = 'success' %}
    {% set alert_view = '@SimplyTestableWebClient/bs3/Partials/User/SignUp/Confirm/Alert/Content/token-resent.html.twig' %}
    {% set alert_view_parameters = {email: email} %}
    {% set alert_dismissable = false %}
{% endif %}

{% if user_token_error is defined and user_token_error == 'blank-token' %}
    {% set alert_view = '@SimplyTestableWebClient/bs3/Partials/User/SignUp/Confirm/Alert/Content/token-empty.html.twig' %}
{% endif %}

{% if user_token_error is defined and user_token_error == 'failed-read-only' %}
    {% set alert_view = '@SimplyTestableWebClient/bs3/Partials/Alert/Content/failed-read-only.html.twig' %}
{% endif %}

{% if user_token_error is defined and user_token_error == 'invalid-token' %}
    {% set alert_view = '@SimplyTestableWebClient/bs3/Partials/User/SignUp/Confirm/Alert/Content/token-invalid.html.twig' %}
{% endif %}

{% if user_create_confirmation is defined and user_create_confirmation is not empty or has_notification == false %}
    {% set alert_type  = 'success' %}
    {% set alert_view = '@SimplyTestableWebClient/bs3/Partials/User/SignUp/Confirm/Alert/Content/post-create.html.twig' %}
    {% set alert_view_parameters = {email: email} %}
    {% set alert_dismissable = false %}
{% endif %}

{% if alert_view is not null %}
    {% include '@SimplyTestableWebClient/bs3/Partials/alert.html.twig' with {
        type: alert_type,
        field_selector: alert_field_selector,
        view: alert_view,
        view_parameters: alert_view_parameters,
        dismissable: alert_dismissable
    } only %}
{% endif %}

{% extends 'SimplyTestableWebClientBundle::App/base.html.twig' %}

{% block title %}Start a new website test - {{ parent() }}{% endblock %}


{% block main %}
<div class="alert alert-info alert-ammendment alert-from-view">
    <i class="icon icon-warning-sign"></i>
    <span>
{% include 'SimplyTestableWebClientBundle:Partials:public-user-notification.html.twig' %}
    </span>
</div> 


<div class="row-fluid">
    <div class="span12">
{% if test_cancelled_queued_website is defined and test_cancelled_queued_website != '' %}
<div class="alert alert-info for:input-website">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    <strong>Your test of {{ test_cancelled_queued_website }} has 
    been cancelled</strong>.<br>We can't show you
    and results as we're in a <strong>read-only</strong> state whilst some 
    <strong>maintenance</strong> is going on and your test was never
    started.
</div>               
{% endif %}         
        
{% include 'SimplyTestableWebClientBundle:Partials:test-input.html.twig' %} 
        </div>            

{% if is_logged_in %}
        <div class="row-fluid" id="recent-site-tests">
            <div class="span12">
                <section>
                    <div>            
                        <h1 class="info">
                            <i class="icon-cog"></i> Recent tests
                        </h1>

                        <div class="inner" id="recent-site-tests-list">
                            
                            {% if recent_tests|length == 0 %}
                            <p>
                                You haven't started any tests yet. When you have, you'll see a summary of 
                                your recent tests here.
                            </p>
                                
                            {% endif %}

                            {% for test in recent_tests %}
                            
                            {% if loop.index0 % 3 == 0 %}
                            <div class="row-fluid">
                            {% endif %}
                                    
                            <div class="site span4">
                                <div class="wrapper">
{% include 'SimplyTestableWebClientBundle:Partials:recent-job-summary.html.twig' %}                                     
                                </div>
                            </div>                                    
                                    
                            {% if loop.last or loop.index % 3 == 0 %}
                            </div>
                            {% endif %}
                            
                            {% endfor %}                                
                                
                        <div class="clearfix"></div>

                    </div>
                </section> 
            </div>

        </div>        
{% endif %}            
    </div>
{% endblock %}
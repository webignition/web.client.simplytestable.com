{
    "name": "simplytestable/webclient",
    "description": "web client to interface with app.simplytestable.com",
    "autoload": {
        "psr-4": { "": "src/" },
        "files": ["app/AppKernel.php", "app/AppCache.php"]
    },
    "autoload-dev": {
        "psr-4": { "Tests\\": "tests/" },
        "files": [ "vendor/symfony/symfony/src/Symfony/Component/VarDumper/Resources/functions/dump.php" ]
    },
    "require": {
        "php": ">=7.2.0",
        "doctrine/doctrine-bundle": "^1.6",
        "doctrine/orm": "^2.6",
        "sensio/framework-extra-bundle": "^5.0.0",
        "symfony/monolog-bundle": "^3.1.0",
        "symfony/symfony": "^4.1",
        "twig/twig": "^2.0",
        "doctrine/migrations": "^1.8",
        "doctrine/doctrine-migrations-bundle": "^1.3",
        "webignition/url":">=2.1, <3",
        "guzzlehttp/guzzle": "^6",
        "webignition/guzzle-curl-exception":">=1,<2",
        "webignition/html-validation-error-normaliser":"^1",
        "webignition/html-validation-error-linkifier":"^0.1",
        "egulias/email-validator":"~2.1",
        "doctrine/collections":"~1.5",
        "webignition/php-stripe-models":">=0.2.6,<1.0",
        "jeremykendall/php-domain-parser": "~5.3",
        "chrisboulton/php-resque": "dev-master#e393d5672cdbe1e94e856a6cb2b2ec97042a4f24",
        "chrisboulton/php-resque-scheduler": "dev-master#ab8bd52949cac1f815bbb97aa39f51c7b5766a86",
        "resquebundle/resque": "^2",
        "webignition/php-ie-detector": ">=0.2,<1",
        "webignition/simplytestable-user-model": ">=0.1,<1",
        "webignition/simplytestable-user-serializer": ">=1.1,<2",
        "webignition/guzzle-http-authentication-middleware": ">=0.2,<1",
        "wildbit/postmark-php": "^2"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "^4.1",
        "phpunit/phpunit": "~7.0",
        "mockery/mockery": "1.0",
        "webignition/http-history-container": ">=0.5,<1",
        "php-mock/php-mock-mockery": "^1.0"
    },
    "scripts": {
        "symfony-scripts": [
            "php bin/console cache:clear",
            "php bin/console cache:warmup"
        ],
        "post-install-cmd": [
            "@symfony-scripts"
        ],
        "post-update-cmd": [
            "@symfony-scripts"
        ],
        "test-unit": "./vendor/bin/phpunit --colors tests/WebClientBundle/Unit/",
        "test-functional": "./vendor/bin/phpunit --colors tests/WebClientBundle/Functional/",
        "test": [
            "@composer test-unit",
            "@composer test-functional"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "symfony-var-dir": "var",
        "symfony-bin-dir": "bin",
        "symfony-tests-dir": "tests",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        },
        "branch-alias": {
            "dev-master": "3.3-dev"
        }
    }
}

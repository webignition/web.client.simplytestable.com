{
    "name": "simplytestable/webclient",
    "description": "web client to interface with app.simplytestable.com",
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "require": {
        "php": ">=5.6.0",
        "symfony/symfony": "2.4.*",
        "doctrine/orm": "~2.2,>=2.2.3",
        "doctrine/doctrine-bundle": "~1.2",
        "twig/extensions": "~1.0",
        "symfony/assetic-bundle": "~2.3",
        "symfony/monolog-bundle": "~2.4",
        "sensio/distribution-bundle": "~2.3",
        "sensio/framework-extra-bundle": "~3.0",
        "sensio/generator-bundle": "~2.3",
        "incenteev/composer-parameter-handler": "~2.0",
        "doctrine/migrations": "~1.2",
        "doctrine/doctrine-migrations-bundle": "~1.2",
        "webignition/url":">=1.9.10,<2.0",
        "guzzle/guzzle":"~3.8.0",
        "webignition/html-validation-error-normaliser":"dev-master",
        "webignition/html-validation-error-linkifier":"dev-master",
        "zfr/zfr-mailchimp":"2.0.5",
        "mlpz/postmark-bundle": "dev-master#95a84ae0e48677e0f9da37e50bc93be624451d21",
        "egulias/email-validator":"1.1.1",
        "doctrine/collections":"~1.2",
        "webignition/php-stripe-models":">=0.2.5,<1.0",
        "jeremykendall/php-domain-parser": "1.2.1",
        "willdurand/negotiation": "1.3.3",
        "chrisboulton/php-resque": "dev-master#e393d5672cdbe1e94e856a6cb2b2ec97042a4f24",
        "chrisboulton/php-resque-scheduler": "dev-master#ab8bd52949cac1f815bbb97aa39f51c7b5766a86",
        "bcc/resque-bundle": "dev-master#eab84a526b6c2b303de04ab2b38114389e62ff7b"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "mockery/mockery": "1.0"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/webignition/ResqueBundle"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "php app/console assetic:dump"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile",
            "php app/console assetic:dump"
        ],
        "test-unit": "./bin/phpunit --colors src/SimplyTestable/WebClientBundle/Tests/Unit/",
        "test-functional": "./bin/phpunit -c app --colors src/SimplyTestable/WebClientBundle/Tests/Functional/",
        "test": [
            "@composer test-unit",
            "@composer test-functional"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "incenteev-parameters": {
            "file": "app/config/parameters.yml"
        },
        "branch-alias": {
            "dev-master": "2.3-dev"
        }
    }
}
